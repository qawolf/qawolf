{
  "name": "qawolf-root",
  "private": true,
  "scripts": {
    "bootstrap": "npm i && lerna bootstrap && npm run build",
    "build": "npm run build:packages && npm run bundle:web",
    "build:packages": "tsc --build packages/tsconfig.project.json",
    "bundle:web": "lerna run --scope @qawolf/web bundle",
    "clean": "lerna clean --yes && lerna exec -- rm -rf tsconfig.package.tsbuildinfo && lerna exec -- rm -rf ./lib",
    "cli": "ts-node packages/cli/src/index.ts",
    "lint": "eslint packages --ext .ts --ignore-path .gitignore --cache",
    "pretest": "npm run lint",
    "publish:next": "lerna publish --dist-tag next --exact --force-publish",
    "test": "lerna run --stream test",
    "test:services": "docker-compose up -d",
    "test:windows": "lerna run --stream test -- -- --forceExit",
    "version": "lerna clean --yes && lerna exec \"npm install --ignore-scripts --package-lock-only --no-audit\" && git add packages/*/package-lock.json",
    "watch": "tsc --build --watch packages/tsconfig.project.json"
  },
  "dependencies": {
    "@qawolf/browser": "file:packages/browser",
    "@qawolf/build-code": "file:packages/build-code",
    "@qawolf/build-workflow": "file:packages/build-workflow",
    "@qawolf/config": "file:packages/config",
    "@qawolf/create-code": "file:packages/create-code",
    "@qawolf/jest-plugin": "file:packages/jest-plugin",
    "@qawolf/logger": "file:packages/logger",
    "@qawolf/repl": "file:packages/repl",
    "@qawolf/screen": "file:packages/screen",
    "@qawolf/test": "file:packages/test",
    "@qawolf/types": "file:packages/types",
    "@qawolf/web": "file:packages/web",
    "@qawolf/web-tests": "file:packages/web-tests"
  },
  "devDependencies": {
    "@jest/test-result": "^25.1.0",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^6.1.1",
    "@types/fs-extra": "^8.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^24.9.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.25",
    "@types/update-notifier": "^2.5.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "fs-extra": "^8.x",
    "handlebars": "^4.x",
    "jest": "^25.1.0",
    "jest-mock-process": "^1.3.2",
    "kleur": "^3.x",
    "lerna": "^3.20.2",
    "lodash": "^4.x",
    "playwright": "0.10.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
}
