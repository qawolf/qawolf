{
  "name": "qawolf-runner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "npm run build:recorder-script && npm run build:tsc",
    "build:tsc": "tsc",
    "build:recorder-script": "cd ../recorder && npm run build && cd ../runner && npm run copy-recorder-script",
    "copy-recorder-script": "cp ../recorder/build/qawolf.recorder.js ./qawolf.recorder.js",
    "dev": "npm run dev-mode-on && concurrently --kill-others \"tsc --watch\" \"npm run watch-and-update-recorder\" \"docker-compose up\"",
    "dev-mode-on": "ln -s docker-compose.dev.yml docker-compose.override.yml || true",
    "dev-mode-off": "rm docker-compose.override.yml || true",
    "lint": "eslint . --ext .ts,.tsx --config eslintrc.json",
    "start": "npm run dev-mode-off && docker-compose up",
    "test": "jest",
    "watch-and-update-recorder": "chokidar \"../recorder/build/qawolf.recorder.js\" -c \"npm run copy-recorder-script\""
  },
  "keywords": [],
  "author": "QA Wolf Inc. <info@qawolf.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/async-retry": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.7",
    "@types/fluent-ffmpeg": "^2.1.16",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/serve-handler": "^6.1.0",
    "@types/socket.io": "^2.1.12",
    "@types/socket.io-client": "^1.4.35",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "async-wait-until": "^1.2.6",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^6.0.2",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "serve-handler": "^6.1.3",
    "socket.io-client": "^3.1.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "tsc-watch": "^4.2.9"
  },
  "dependencies": {
    "async-retry": "^1.3.1",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "cuid": "^2.1.8",
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "faker": "^5.4.0",
    "fluent-ffmpeg": "^2.1.2",
    "get-urls": "^10.0.0",
    "lodash": "^4.17.20",
    "playwright": "1.10.0",
    "qawolf": "2.3.1",
    "socket.io": "^3.1.0",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2",
    "vm2": "^3.9.2"
  }
}
